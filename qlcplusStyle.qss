/* ##### Toolbar buttons ##### */
QToolButton {
  color: white;
  background: transparent;
}

FixtureConsole QToolButton,
ConsoleChannel QToolButton {
  background: qlineargradient(
    x1: 0,
    y1: 0,
    x2: 0,
    y2: 1,
    stop: 0 #ddedff,
    stop: 1 #ddedff
  ); /*#de0707;*/
  padding: 5px;
  border: none;
}

QComboBox {
  background: #2a2a2e;
  border: none;
  selection-background-color: #38383d;
  selection-color: #ffffff;
  color: #ffffff;
}

QComboBox QAbstractItemView {
  background: #2a2a2e;
  color: #ffffff;
  border: none;
  selection-color: #ffffff;
  selection-background-color: #38383d;
}

QComboBox:on {
  selection-background-color: #38383d;
  background: #2a2a2e;
}

