/* QLC+ Black theme by Emerick Herve */
/* Modified my Xilef12000 */

/* ##### Main window ##### */
QMainWindow,
QDialog {
  background-color: #2a2a2e;
  color: #cdcdd4;
}

QRadioButton {
  color: #cdcdd4;
}

/* ##### Tree (Fixtures) ##### */
QTreeWidget,
QTreeView {
  background-color: #2a2a2e;
  alternate-background-color: #2a2a2e;
  color: #cdcdd4;
  font-size: 16px;
}

/* ##### Text (Fixture/In-Out details) ##### */
QTextBrowser {
  background-color: #2a2a2e;
  color: #cdcdd4;
}

/* ##### Editable Fields ##### */
QComboBox {
  background-color: #2a2a2e;
  color: #cdcdd4;
}

QLineEdit {
  background-color: #2a2a2e;
  color: #cdcdd4;
}

EFXEditor QWidget:editable {
  background-color: #2a2a2e;
  color: #cdcdd4;
}

/* ##### Universe list ##### */
QListWidget {
  color: #2a2a2e;
  background-color: #cdcdd4;
}

/* ##### Splitter ##### */
QSplitter::handle {
  background-color: #2a2a2e;
  border: 0px;
}

QSplitter::handle:hover {
  background-color: #2a2a2e;
  border: 0px;
}

/* ##### Toolbars, ... ##### */
QToolBar {
  background: #2a2a2e;
  color: white;
}

QLabel {
  color: white;
  padding: 3px;
}

MonitorFixture QLabel {
  color: black;
}

QTabWidget::pane {
  border: 0px;
}

QTabWidget::tab-bar {
  left: 5px; /* move to the right by 5px */
}

QTabBar::tab {
  background: #2a2a2e;
  border: 0px;
  padding: 5px;
  color: #ffffff;
}

QTabBar::tab:selected,
QTabBar::tab:hover {
  background: #38383d;
}

QHeaderView::section {
  background: #2a2a2e;
  color: white;
  border: 0px;
  padding: 3px;
}

QGroupBox,
QCheckBox {
  color: #cdcdd4;
}

